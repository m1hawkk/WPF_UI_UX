<Window x:Class="WPF_UI_UX.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Tên đăng nhập:"/>
            <TextBox x:Name="txtUsername" Width="200" Margin="0,0,0,10"/>
            <Label Content="Mật khẩu:"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,20"/>
            <Button Content="Đăng nhập" Click="LoginButton_Click" Width="100" Margin="0,0,0,5"/>
            <Button Content="Hủy bỏ" Click="CancelButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>